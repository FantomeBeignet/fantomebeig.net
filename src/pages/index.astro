---
import Layout from '../layouts/Layout.astro';
---

<Layout title="FantomeBeignet - Home">
	<main
		class="w-full h-full flex flex-col items-center justify-center font-body p-16 md:p-24 lg:p-32 gap-20 md:gap-28 lg:gap-36 text-surface-50"
	>
		<!-- Hero section -->
		<div class="flex flex-col items-start justify-center gap-1 md:gap-2">
			<h1 class="text-4xl md:text-6xl lg:text-8xl font-heading font-bold">
				Hello, I'm <br /><span class="gradient-heading">FantomeBeignet</span>
			</h1>
			<span class="text-lg md:text-2xl lg:text-3xl leading-tight font-light"
				>I'm a small dev working mostly on websites and compilers</span
			>
		</div>

		<!-- Links -->
		<div class="flex flex-col items-center justify-center">
			<h3 class="text-xl md:text-2xl lg:text-3xl font-light">Find me on:</h3>
			<div class="flex items-center justify-center p-4 md:p-6 lg:p-8 gap-6 md:gap-10 lg:gap-12">
				<a
					rel="me"
					href="https://hachyderm.io/@fantomebeignet"
					class="flex flex-col items-center justify-center gap-2 hover:text-primary transition-colors"
				>
					<span class="fa-brands fa-mastodon text-2xl md:text-4xl lg:text-4xl text-center"></span>
					<span class="text-lg md:text-xl lg:text-2xl font-light">Mastodon</span>
				</a>
				<a
					rel="me"
					href="https://github.com/FantomeBeignet"
					class="flex flex-col items-center justify-center gap-2 hover:text-primary transition-colors"
				>
					<span class="fa-brands fa-github text-2xl md:text-4xl lg:text-4xl text-center"></span>
					<span class="text-lg md:text-xl lg:text-2xl font-light">GitHub</span>
				</a>
			</div>
		</div>
	</main>
</Layout>

<style>
	.gradient-heading {
		@apply bg-clip-text text-transparent box-decoration-clone;
		/* Direction */
		@apply bg-gradient-to-br;
		/* Color Stops */
		@apply from-tertiary from-15% via-secondary to-primary to-85%;
	}
</style>
