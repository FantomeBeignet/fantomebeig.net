---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 Not Found">
	<main class="flex items-center justify-center">
		<div class="flex flex-col items-start justify-center gap-1 p-8 md:gap-2 md:p-16 lg:p-32">
			<span class="font-heading text-4xl font-bold md:text-6xl lg:text-8xl">
				Uh oh,<br />you seem <span class="gradient-heading">lost.</span>
			</span>
			<a
				href="/"
				class="text-lg leading-tight underline-offset-4 transition-colors hover:text-primary hover:underline md:text-2xl lg:text-3xl"
				>Return to home</a
			>
		</div>
	</main>
</Layout>
