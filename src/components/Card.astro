---
const { title, tags, link } = Astro.props;
---

<a
	href={link}
	class="bg-surface-800 text-surface-50 flex flex-col items-start justify-center border border-surface-600 p-4 md:p-5 lg:p-6 w-48 md:w-64 lg:w-80 gap-3 md:gap-4 lg:gap-6 hover:scale-[102%] hover:brightness-105 transition-transform"
>
	<div class="flex flex-col items-start justify-center">
		<h3 class="text-lg md:text-xl lg:text-2xl font-normal">{title}</h3>
		<span class="text-sm md:text-base lg:text-xl text-surface-300 leading-tight">{tags}</span>
	</div>
	<p class="text-base md:text-lg lg:text-xl leading-tight line-clamp-3 h-16 md:h-[4.5rem] lg:h-20">
		<slot />
	</p>
</a>
